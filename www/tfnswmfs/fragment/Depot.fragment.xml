<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<ResponsivePopover class="sapUiPopupWithPadding"
		placement="Bottom" title="Select Depot" verticalScrolling="true">
		<content>
			<List headerText="" selectionChange="onSelDepot"
				items="{ path:'depotModel>/listitems' }" backgroundDesign="Transparent"
				growing="true" growingScrollToLoad="true" growingThreshold="10"
				includeItemInSelection="true" showSeparators="All" showUnread="true"
				rememberSelections="false" width="auto" mode="SingleSelectMaster">
				<items>
					<StandardListItem title="{depotModel>Name1}"
						value="{depotModel>Werks}" adaptTitleSize="true"
						titleTextDirection="LTR" class="popList" />
				</items>
			</List>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>